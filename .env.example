# Environment Configuration
# Copy this file to .env and configure your Azure services

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Azure IoT Hub
AZURE_IOT_HUB_CONNECTION_STRING=HostName=smartliving-hub.azure-devices.net;SharedAccessKeyName=iothubowner;SharedAccessKey=your-key
AZURE_IOT_HUB_HOSTNAME=smartliving-hub.azure-devices.net
AZURE_IOT_HUB_DEVICE_CONNECTION_STRING=HostName=smartliving-hub.azure-devices.net;DeviceId=your-device;SharedAccessKey=your-device-key

# Azure SQL Database
AZURE_SQL_CONNECTION_STRING=Server=tcp:smartliving-sql.database.windows.net,1433;Initial Catalog=SmartLivingDB;Persist Security Info=False;User ID=smartliving_admin;Password=your-password;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;
AZURE_SQL_SERVER=smartliving-sql.database.windows.net
AZURE_SQL_DATABASE=SmartLivingDB
AZURE_SQL_USERNAME=smartliving_admin
AZURE_SQL_PASSWORD=your-strong-password

# Azure SignalR Service
AZURE_SIGNALR_CONNECTION_STRING=Endpoint=https://smartliving-signalr.service.signalr.net;AccessKey=your-access-key;Version=1.0;

# Azure Active Directory B2C
AZURE_AD_CLIENT_ID=your-ad-client-id
AZURE_AD_CLIENT_SECRET=your-ad-client-secret
AZURE_AD_TENANT_NAME=smartliving
AZURE_AD_POLICY_NAME=B2C_1_signin_signup

# Azure Key Vault
AZURE_KEY_VAULT_URL=https://smartliving-kv.vault.azure.net/

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=smartlivingstorage;AccountKey=your-storage-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_ACCOUNT_NAME=smartlivingstorage

# Application Insights
AZURE_APPLICATION_INSIGHTS_CONNECTION_STRING=InstrumentationKey=your-instrumentation-key;IngestionEndpoint=https://centralus-0.in.applicationinsights.azure.com/;LiveEndpoint=https://centralus.livediagnostics.monitor.azure.com/

# Dashboard Configuration
REACT_APP_API_BASE_URL=https://smartliving-functions.azurewebsites.net
REACT_APP_SIGNALR_URL=https://smartliving-signalr.service.signalr.net
REACT_APP_AUTH_DOMAIN=smartliving.b2clogin.com

# Device Configuration
DEVICE_ID=raspberry-pi-01
DEVICE_LOCATION=living-room
TELEMETRY_INTERVAL=30000

# Development Settings
NODE_ENV=development
PORT=3000
FUNCTIONS_PORT=7071

# Security
JWT_SECRET=your-jwt-secret-key-for-local-development-only
ENCRYPTION_KEY=your-32-character-encryption-key

# Raspberry Pi Simulator
SIMULATE_DEVICES=true
DEVICE_COUNT=5
SIMULATION_SPEED=1